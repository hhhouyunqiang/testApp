<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_height"
        android:background="@color/top_bg_1"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/icTv_topbar_back"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="left|center_vertical"
            android:paddingLeft="15dp"
            android:text="@string/icon_left"
            android:textColor="@color/primary"
            android:textSize="@dimen/top_left_arrow" />
        <TextView
            android:id="@+id/tv_topbar_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="@dimen/top_title" />
    </RelativeLayout>

    <View style="@style/divider_line"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_sample_property"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"/>

    <View
        style="@style/divider_line"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF">
        <Spinner
            android:id="@+id/sp_contact_name"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:spinnerMode="dialog" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/divider_line" />
        <Spinner
            android:id="@+id/sp_contact_phone"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="3"
            android:spinnerMode="dialog" />
    </LinearLayout>

    <View style="@style/divider_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_margin="20dp">
        <LinearLayout
            android:id="@+id/btn_cati_call_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:background="@drawable/btn_call">
            <com.joanzapata.iconify.widget.IconTextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:text="@string/icon_cati"
                android:textSize="@dimen/size5"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:text="本机拨打"
                android:textSize="@dimen/size2"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_cati_call_behalf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="50dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:background="@drawable/btn_call">
            <com.joanzapata.iconify.widget.IconTextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:text="@string/icon_cati"
                android:textSize="@dimen/size5"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:text="代理拨打"
                android:textSize="@dimen/size2"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_cati_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">

        <View style="@style/divider_line"/>

        <LinearLayout
            android:id="@+id/view_cati_appoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@color/white">
            <com.joanzapata.iconify.widget.IconTextView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:gravity="center_vertical"
                android:text="@string/icon_clock"
                android:textSize="@dimen/item_right_arrow"
                android:textColor="@color/color06" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:text="预约回访"
                android:textSize="@dimen/size2" />
            <TextView
                android:id="@+id/tv_cati_appoint_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:textColor="@color/color08"
                android:textSize="@dimen/size2" />
            <com.joanzapata.iconify.widget.IconTextView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:gravity="center_vertical"
                android:text="@string/icon_right"
                android:textColor="@color/color10"
                android:textSize="@dimen/item_right_arrow" />
        </LinearLayout>

        <View style="@style/divider_line"/>

        <LinearLayout
            android:id="@+id/view_cati_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@color/white">
            <com.joanzapata.iconify.widget.IconTextView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:gravity="center_vertical"
                android:text="@string/icon_close"
                android:textSize="@dimen/item_right_arrow"
                android:textColor="@color/color02" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:text="失败设定"
                android:textSize="@dimen/size2" />
            <TextView
                android:id="@+id/tv_cati_error_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:textColor="@color/color08"
                android:textSize="@dimen/size2" />
            <com.joanzapata.iconify.widget.IconTextView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:gravity="center_vertical"
                android:text="@string/icon_right"
                android:textColor="@color/color10"
                android:textSize="@dimen/item_right_arrow" />
        </LinearLayout>

        <View style="@style/divider_line"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_cati_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@color/white">
        <com.joanzapata.iconify.widget.IconTextView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:gravity="center_vertical"
            android:text="@string/icon_building"
            android:textSize="@dimen/item_right_arrow"
            android:textColor="@color/color04" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:text="开始填答"
            android:textSize="@dimen/size2" />
        <com.joanzapata.iconify.widget.IconTextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:text="@string/icon_right"
            android:textColor="@color/color10"
            android:textSize="@dimen/item_right_arrow" />
    </LinearLayout>

    <View style="@style/divider_line"/>

    <LinearLayout
        android:id="@+id/ll_cati_next_sample"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <View style="@style/divider_line" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@color/white"
            android:text="下一样本"
            android:textColor="@color/primary"
            android:textSize="@dimen/size2" />

        <View style="@style/divider_line"/>

    </LinearLayout>

</LinearLayout>