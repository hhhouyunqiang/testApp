<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@color/white">

    <com.joanzapata.iconify.widget.IconTextView
        android:id="@+id/tv_item_left"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="@string/mine_synchronous_data_ic"
        android:textSize="@dimen/size5" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:id="@+id/tv_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color08"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/tv_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/color10"
            android:textSize="13sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_right"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="left|center_vertical"
        android:textSize="13sp"
        android:textColor="@color/color06"
        android:background="@color/white" />

</LinearLayout>