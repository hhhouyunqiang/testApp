<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/white">

    <RelativeLayout
        android:layout_height="@dimen/top_height"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:background="@color/top_bg">
        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/icTv_topbar_back"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:paddingLeft="15dp"
            android:layout_alignParentLeft="true"
            android:text="@string/icon_left"
            android:textColor="@color/top_title"
            android:textSize="@dimen/top_left_arrow" />
        <TextView
            android:id="@+id/tv_topbar_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="找回密码"
            android:textStyle="bold"
            android:textColor="@color/top_title"
            android:textSize="@dimen/top_title" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="20dp">

            <android.support.design.widget.TabLayout
                android:id="@+id/top_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_horizontal">
                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机找回" />
                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="邮箱找回" />
            </android.support.design.widget.TabLayout>

            <LinearLayout
                android:id="@+id/code_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">
                <EditText
                    android:id="@+id/text_phone"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:hint="注册手机号"
                    android:textSize="@dimen/size3"
                    android:inputType="phone" />
                <Button
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:id="@+id/btn_verify"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_enabled"
                    android:text="获取验证码" />
            </LinearLayout>
            <EditText
                android:id="@+id/text_code"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:hint="验证码"
                android:textSize="@dimen/size3"
                android:inputType="textPersonName" />
            <EditText
                android:id="@+id/text_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:hint="新密码"
                android:textSize="@dimen/size3"
                android:inputType="textPassword" />
            <EditText
                android:id="@+id/text_password2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:hint="确认密码"
                android:textSize="@dimen/size3"
                android:inputType="textPassword" />
            <EditText
                android:id="@+id/text_user"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:hint="用户名"
                android:textSize="@dimen/size3"
                android:inputType="textPersonName"
                android:visibility="gone" />
            <EditText
                android:id="@+id/text_email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:hint="注册邮箱"
                android:textSize="@dimen/size3"
                android:inputType="textEmailAddress"
                android:visibility="gone" />
            <LinearLayout
                android:id="@+id/pic_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone">
                <EditText
                    android:id="@+id/text_pic_code"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:hint="图形验证码"
                    android:textSize="@dimen/size3"
                    android:inputType="textPersonName" />
                <ImageView
                    android:id="@+id/img_code"
                    android:layout_width="80dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp" />
            </LinearLayout>

            <Button
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:id="@+id/btn_recover_pass"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:height="@dimen/h3"
                android:background="@drawable/sign_in_button"
                android:text="确   定"
                android:textColor="@color/white"
                android:textSize="@dimen/sign_in_edit" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>